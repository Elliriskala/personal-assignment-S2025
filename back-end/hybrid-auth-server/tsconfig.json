{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src", // Ensure baseUrl is set to src
    "paths": {
      "*": ["node_modules/*", "*"]
    }
  },
  "include": ["./*.js", "src/**/*.ts"],
  "exclude": ["test"]
}
